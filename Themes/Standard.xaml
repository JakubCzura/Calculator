<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Margin" Value="3,3,3,3"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="equalsButtonStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="CadetBlue"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="Cyan"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="numberButtonStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="AliceBlue"></Setter>
    </Style>

    <Style TargetType="Menu" x:Key="menuStyle">
        <Setter Property="Background" Value="Aqua"></Setter>
    </Style>

    <Style TargetType="MenuItem" x:Key="menuItemStyle">
        <Setter Property="Background" Value="Aqua"></Setter>
    </Style>

    <!--<Style TargetType="Window" x:Key="windowStyle">
        <Setter Property="Background" Value="#FFD0E281"></Setter>
    </Style>-->
    
</ResourceDictionary>