<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Margin" Value="3,3,3,3"></Setter>
        <Setter Property="Background" Value="#03a5fc"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="equalsButtonStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="#03a5fc"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="#0eeded"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="numberButtonStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="#0eeded"></Setter>
    </Style>

    <Style TargetType="Menu" x:Key="menuStyle">
        <Setter Property="Background" Value="#4792f5"></Setter>
    </Style>

    <Style TargetType="MenuItem" x:Key="menuItemStyle">
        <Setter Property="Background" Value="#4792f5"></Setter>
    </Style>

    <Style TargetType="Window" x:Key="windowStyle">
        <Setter Property="Background" Value="#03fcfc"></Setter>
    </Style>

</ResourceDictionary>