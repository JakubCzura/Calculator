<Window x:Class="Calculator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.View"
        mc:Ignorable="d"
        xmlns:app="clr-namespace:Calculator"
        Title="Calculator" Height="450" Width="300" MinHeight="450" MinWidth="300" MaxHeight="600" MaxWidth="400">
    <Window.Resources>
        <app:App x:Key="App"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="4" Content="4" Style="{StaticResource numberButtonStyle}"></Button>
        <Button Grid.Row="4" Grid.Column="1" Content="5" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="4" Grid.Column="2" Content="6" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="4" Grid.Column="3" Content="-" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="3" Content="7" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="3" Grid.Column="1" Content="8" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="3" Grid.Column="2" Content="9" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="3" Grid.Column="3" Content="x" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="2" Content="1/x" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="2" Grid.Column="1" Content="x^2" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="sqrt(x)" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="2" Grid.Column="3" Content="/" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="1" Content="%" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="1" Grid.Column="1" Content="CE" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="1" Grid.Column="2" Content="C" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="1" Grid.Column="3" Content="back" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="5" Content="1" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="5" Grid.Column="1" Content="2" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="5" Grid.Column="2" Content="3" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="5" Grid.Column="3" Content="+" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="6" Content="+/-" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="6" Grid.Column="1" Content="0" Style="{StaticResource numberButtonStyle}"/>
        <Button Grid.Row="6" Grid.Column="2" Content="," Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="6" Grid.Column="3" Content="=" Style="{StaticResource equalsButtonStyle}"/>
        <TextBlock x:Name="textBlock" Margin="5,5,5,5" Text="TextBlock" TextWrapping="Wrap" Grid.ColumnSpan="4" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="20"/>


    </Grid>
</Window>
